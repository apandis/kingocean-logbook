<div class="row mt-3 mb-3 align-items-center">
  <div class="col-auto mr-auto">
    <h1>Visitors Log</h1>
  </div>
  <div class="col-auto">
    <%= link_to 'New Visitor', new_visitor_path, class: 'btn btn-success' %>
  </div>
</div>
<div class="row">
    <div class="col-sm-12">
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Date</th>
          <th>Name</th>
          <th>Company</th>
          <th>Purpose</th>
          <th colspan="3">Actions</th>
        </tr>
      </thead>

      <tbody>
        <% @visitors.each do |visitor| %>
          <tr>
            <td><%= visitor.created_at.strftime("%d/%m/%Y %H:%M") %></td>
            <td><%= visitor.name %></td>
            <td><%= visitor.company %></td>
            <td><%= visitor.purpose %></td>
            <td><%= link_to 'Show', visitor, class: "btn btn-primary btn-sm" %></td>
            <td><%= link_to 'Edit', edit_visitor_path(visitor), class: "btn btn-info btn-sm"  %></td>
            <td><%= link_to 'Destroy', visitor, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-sm"  %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
